{
  "manifestVersion": 1,
  "id": "auto-state",
  "public": true,
  "name": "Auto State",
  "publisher": "JoachimDalen",
  "version": "0.0.1",
  "description": "An extension to automatically update states between parents and children",
  "categories": ["Azure Boards"],
  "demands": ["api-version/5.1"],
  "tags": [
    "work items",
    "state",
    "auto update"
  ],
  "galleryFlags": ["Public", "Preview"],
  "scopes": ["vso.work_write"],
  "icons": {
    "default": "extension-icon.png"
  },
  "content": {
    "details": { "path": "docs/README.md" },
    "changelog": { "path": "docs/CHANGELOG.md" }
  },
  "branding": {
    "color": "#215564",
    "theme": "dark"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services.Cloud"
    }
  ],
  "files": [
    {
      "path": "docs/images",
      "addressable": true
    },
    {
      "path": "dist",
      "addressable": true
    }
  ],
  "screenshots": [
    {
      "path": "docs/images/rule-editor.png"
    },
    {
      "path": "docs/images/rule-modal.png"
    }
  ],
  "contributions": [
    {
      "id": "work-item-observer",
      "type": "ms.vss-work-web.work-item-notifications",
      "targets": ["ms.vss-work-web.work-item-form"],
      "properties": {
        "uri": "dist/observer.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.auto-state.auto-state-enabled"
          }
        }
      ]
    },
    {
      "id": "rule-modal",
      "type": "ms.vss-web.external-content",
      "targets": [],
      "properties": {
        "uri": "dist/rule-modal.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.auto-state.auto-state-enabled"
          }
        }
      ]
    },
    {
      "id": "admin-hub",
      "type": "ms.vss-web.hub",
      "description": "Configuration hub for Auto State",
      "targets": ["ms.vss-web.project-admin-hub-group"],
      "properties": {
        "name": "Auto State",
        "order": 1,
        "uri": "dist/admin-hub.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.auto-state.auto-state-enabled"
          }
        }
      ]
    },
    {
      "id": "auto-state-enabled",
      "type": "ms.vss-web.feature",
      "description": "Enables auto state listerner and admin interface",
      "targets": ["ms.vss-web.managed-features"],
      "properties": {
        "name": "Auto State",
        "userConfigurable": false,
        "hostConfigurable": true,
        "hostScopes": ["project"],
        "links": {
          "learn": {
            "uri": "https://github.com/joachimdalen/azdevops-auto-state#post-install-activation"
          }
        }
      }
    }
  ]
}
